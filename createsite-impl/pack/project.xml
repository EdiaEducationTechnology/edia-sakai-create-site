<?xml version="1.0" encoding="UTF-8"?>
<project>
	
	<pomVersion>3</pomVersion>
	
	<extend>../../project.xml</extend>
	
	<name>Edia Sakai Create Site Pack</name>
	<groupId>edia</groupId>
	<id>edia-sakai-createsite-pack</id>
	<currentVersion>${sakai.version}</currentVersion>
	<organization>
		<name>Edia</name>
		<url>http://www.edia.nl/</url>
	</organization>
	<inceptionYear>2008</inceptionYear>

	<!-- you must deploy your pack to components -->
	<properties>
		<deploy.type>components</deploy.type>
	</properties>

	<dependencies>

		<dependency>
			<groupId>edia</groupId>
			<artifactId>edia-sakai-createsite-impl</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>edia</groupId>
			<artifactId>edia-sakai-utils</artifactId>
			<version>${edia.sakai.utils.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

	</dependencies>

	<build>
		<sourceDirectory>src/java</sourceDirectory>
	</build>
</project>
