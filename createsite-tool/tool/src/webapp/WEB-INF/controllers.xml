<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="selectTemplateController" class="nl.edia.sakai.createsite.tool.controllers.SelectTemplateController">
		<property name="createSiteService" ref="nl.edia.sakai.createsite.api.CreateSiteService"/>
		<property name="siteService" ref="org.sakaiproject.site.api.SiteService"/>
		<property name="formView" value="selecttemplate"/>
		<property name="successView" value="redirect:editsite.spring"/>
	</bean>

	<bean id="editSiteController" class="nl.edia.sakai.createsite.tool.controllers.EditSiteController">
		<property name="createSiteService" ref="nl.edia.sakai.createsite.api.CreateSiteService"/>
		<property name="siteService" ref="org.sakaiproject.site.api.SiteService"/>
		<property name="formView" value="editsite"/>
		<property name="successView" value="redirect:viewsite.spring"/>
	</bean>

	<bean id="viewSiteController" class="nl.edia.sakai.createsite.tool.controllers.ViewSiteController">
		<property name="siteService" ref="org.sakaiproject.site.api.SiteService"/>
		<property name="viewName" value="viewsite"/>
	</bean>

</beans>